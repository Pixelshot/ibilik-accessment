<h1>Create a new property!</h1>

<% if @property && !@property.errors.empty? %>
	<% @property.errors.full_messages.each do |x| %>
	<p><%= x %></p>
	<% end %>
<% end %>	

<form action="/properties/<%= @property.id %>" method="post">
	<input type="hidden" name="_method" value="put">
	<textarea name="property[description]" row="5" cols="30">
	<%= @property.description %>
	</textarea>
	<p> Price: <br />
	<input type="text" placeholder="eg. RM 10" name="property[price]"><br></p>
	
	<p> Location: <br />
	<input type="text" placeholder="eg. Cyberjaya" name="property[location]"><br /></p>
	<input type="submit" value="update!">
</form>